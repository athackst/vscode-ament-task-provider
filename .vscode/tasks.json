// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			}
		},
		{
			"label": "package",
			"type": "shell",
			"command": "vsce package",
			"problemMatcher": []
		},
		{
			"label": "pre-release",
			"type": "shell",
			"command": "vsce publish --pre-release",
			"problemMatcher": []
		},
		{
			"label": "publish",
			"type": "shell",
			"command": "vsce publish",
			"problemMatcher": []
		}
	]
}
