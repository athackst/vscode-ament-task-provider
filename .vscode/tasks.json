// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "npm",
            "script": "pack",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "npm",
            "script": "pub",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "npm",
            "script": "fix",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "type": "npm",
            "script": "test",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "type": "npm",
            "script": "update",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "data gen",
            "type": "shell",
            "command": "tests/data/gen.sh",
            "problemMatcher": []
        },
        {
            "label": "data gen (rolling)",
            "type": "shell",
            "command": "tests/data/gen.sh",
            "problemMatcher": [],
            "options": {
                "env": {
                    "DOCKER_IMAGE": "althack/ros2:rolling-dev"
                }
            }
        },
        {
            "label": "data gen (humble)",
            "type": "shell",
            "command": "tests/data/gen.sh",
            "problemMatcher": [],
            "options": {
                "env": {
                    "DOCKER_IMAGE": "althack/ros2:humble-dev"
                }
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf out/* *.vsix",
            "problemMatcher": []
        },
        {
            "label": "test",
            "dependsOrder": "sequence",
            "dependsOn": ["npm: compile", "data gen", "npm: test", "npm: pretty"],
            "problemMatcher": []
        },
        {
            "label": "test (rolling)",
            "dependsOrder": "sequence",
            "dependsOn": ["npm: compile", "data gen (rolling)", "npm: test"],
            "problemMatcher": []
        }
    ]
}
